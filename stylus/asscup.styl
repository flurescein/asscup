@import url('https://fonts.googleapis.com/css?family=Open+Sans:400')

body
    display flex
    margin 0
    
    height 100vh
    overflow hidden

#input-area, #output-area
    font 20px 'Open Sans', sans-serif
    padding 20px
    word-wrap break-word

#input-area
    resize none
    outline none
    border none

#output-area
    background #333
    color #fff
    overflow auto

#logo
    position absolute
    bottom 20px

    font 50px 'Open Sans', sans-serif
    color #fff
    text-align center
    user-select none

    text-shadow -1px -1px 0 #333,
			     1px -1px 0 #333,
			    -1px 1px 0 #333,
			     1px 1px 0 #333

@media screen and (min-width: 1100px)
    #input-area, #output-area
        width 50%

    #logo
        right 20px

@media screen and (max-width: 1100px)
    body
        flex-direction column
    
    #input-area, #output-area
        height 50%
    
    #logo
        left 0
        right 0
    
@media screen and (max-height: 400px)
    #logo
        display none
